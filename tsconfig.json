{
  "compileOnSave": false,
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "dist"
  },
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "genDir": "dist",
    "skipTemplateCodegen": true,
    "entryModule": "./src/module#PlatformModule"
  }
}
